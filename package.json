{
    "name": "giz-costing-tool-app",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "npm run envsub && ng serve",
        "start-es": "npm run envsub && ng serve --configuration=es",
        "envsub": "envsub ./src/index.tpl.html ./src/index.html --env-file .env",
        "build": "ng build --configuration production && npm run copy-index",
        "copy-index": " cp ./src/index-redirect.html ./dist/index.html ",
        "watch": "ng build --watch --configuration development",
        "lint": "npm run lint-ts && npm run lint-sass",
        "lint:watch": "nodemon --exec \"npm run lint || exit 1\" --ext ts,html,scss",
        "lint-ts": "eslint ./src/app",
        "lint-fix": "eslint ./src/app --fix",
        "lint-sass": "stylelint './src/app/**/*.scss' './src/scss/**/*.scss'",
        "icons": "svg2sprite ./src/assets/images/icons ./src/assets/images/icons.svg --stripAttrs fill --stripAttrs stroke --stripAttrs id",
        "test": "ng test",
        "extract-i18n": "ng extract-i18n --output-path src/assets/i18n --out-file source-en.json --format json && ng extract-i18n --output-path src/assets/i18n --out-file source-en.xlf"
    },
    "dependencies": {
        "@angular/animations": "19.1.3",
        "@angular/cdk": "19.1.1",
        "@angular/common": "19.1.3",
        "@angular/compiler": "19.1.3",
        "@angular/core": "19.1.3",
        "@angular/forms": "19.1.3",
        "@angular/localize": "19.1.3",
        "@angular/platform-browser": "19.1.3",
        "@angular/platform-browser-dynamic": "19.1.3",
        "@angular/router": "19.1.3",
        "@ngxs/store": "19.0.0",
        "@tanstack/angular-query-experimental": "5.64.2",
        "apexcharts": "4.4.0",
        "envsub": "4.1.0",
        "marked": "15.0.6",
        "ng-apexcharts": "1.15.0",
        "ngx-toastr": "19.0.0",
        "rxjs": "7.8.1",
        "tslib": "2.8.1",
        "zone.js": "0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "19.1.4",
        "@angular-eslint/eslint-plugin": "19.0.2",
        "@angular-eslint/eslint-plugin-template": "19.0.2",
        "@angular-eslint/schematics": "19.0.2",
        "@angular-eslint/template-parser": "19.0.2",
        "@angular/cli": "19.1.4",
        "@angular/compiler-cli": "19.1.3",
        "@eslint/compat": "1.2.5",
        "@eslint/eslintrc": "3.2.0",
        "@eslint/js": "9.18.0",
        "@stylistic/eslint-plugin-ts": "2.13.0",
        "@tanstack/angular-query-devtools-experimental": "5.40.0",
        "@typescript-eslint/eslint-plugin": "8.21.0",
        "@typescript-eslint/parser": "8.21.0",
        "@types/jasmine": "5.1.5",
        "eslint": "9.18.0",
        "eslint-config-prettier": "10.0.1",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-jsdoc": "50.6.2",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-prettier": "5.2.3",
        "jasmine-core": "5.5.0",
        "karma": "6.4.4",
        "karma-chrome-launcher": "3.2.0",
        "karma-coverage": "2.2.1",
        "karma-jasmine": "5.1.0",
        "karma-jasmine-html-reporter": "2.1.0",
        "globals": "15.14.0",
        "stylelint": "16.13.2",
        "stylelint-config-standard-scss": "14.0.0",
        "stylelint-order": "6.0.4",
        "stylelint-selector-bem-pattern": "4.0.1",
        "svg2sprite-cli": "2.0.1",
        "typescript": "5.7.3"
    },
    "engines": {
        "node": "22"
    },
    "browserslist": [
        "last 2 Chrome version",
        "last 2 Firefox version",
        "last 2 Edge major versions",
        "last 2 Safari major versions",
        "last 2 iOS major versions",
        "Firefox ESR",
        "not IE > 0"
    ]
}
