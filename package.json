{
    "name": "giz-costing-tool-app",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "npm run envsub && ng serve",
        "start-es": "npm run envsub && ng serve --configuration=es",
        "envsub": "envsub ./src/index.tpl.html ./src/index.html --env-file .env",
        "build": "ng build --configuration production",
        "watch": "ng build --watch --configuration development",
        "lint": "npm run lint-ts && npm run lint-sass",
        "lint:watch": "nodemon --exec \"npm run lint || exit 1\" --ext ts,html,scss",
        "lint-ts": "eslint --ext .ts,.html ./src/app",
        "lint-fix": "eslint --ext .ts,.html ./src/app --fix",
        "lint-sass": "stylelint ./src/app/**/*.scss ./src/scss/**/*",
        "icons": "svg2sprite ./src/assets/images/icons ./src/assets/images/icons.svg --stripAttrs fill --stripAttrs stroke --stripAttrs id",
        "test": "ng test",
        "extract-i18n": "ng extract-i18n --output-path src/assets/i18n --out-file source-en.json --format json && ng extract-i18n --output-path src/assets/i18n --out-file source-en.xlf"
    },
    "dependencies": {
        "@angular/animations": "17.2.0",
        "@angular/cdk": "17.2.0",
        "@angular/common": "17.2.0",
        "@angular/compiler": "17.2.0",
        "@angular/core": "17.2.0",
        "@angular/forms": "17.2.0",
        "@angular/localize": "17.2.0",
        "@angular/platform-browser": "17.2.0",
        "@angular/platform-browser-dynamic": "17.2.0",
        "@angular/router": "17.2.0",
        "@ngxs/store": "3.8.2",
        "@tanstack/angular-query-experimental": "5.40.0",
        "envsub": "4.1.0",
        "marked": "12.0.2",
        "ngx-toastr": "17.0.2",
        "rxjs": "7.8.0",
        "tslib": "2.3.0",
        "zone.js": "0.14.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "17.2.2",
        "@angular-eslint/eslint-plugin": "17.2.1",
        "@angular-eslint/eslint-plugin-template": "17.2.1",
        "@angular-eslint/schematics": "17.2.1",
        "@angular-eslint/template-parser": "17.2.1",
        "@angular/cli": "17.2.2",
        "@angular/compiler-cli": "17.2.0",
        "@tanstack/angular-query-devtools-experimental": "5.40.0",
        "@types/jasmine": "5.1.0",
        "@typescript-eslint/eslint-plugin": "5.62.0",
        "@typescript-eslint/parser": "5.62.0",
        "eslint": "8.47.0",
        "eslint-config-prettier": "8.10.0",
        "eslint-plugin-import": "2.28.1",
        "eslint-plugin-jsdoc": "44.2.2",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-prettier": "4.2.1",
        "jasmine-core": "5.1.0",
        "karma": "6.4.0",
        "karma-chrome-launcher": "3.2.0",
        "karma-coverage": "2.2.0",
        "karma-jasmine": "5.1.0",
        "karma-jasmine-html-reporter": "2.1.0",
        "stylelint": "14.16.1",
        "stylelint-config-standard-scss": "5.0.0",
        "stylelint-order": "5.0.0",
        "stylelint-selector-bem-pattern": "2.1.1",
        "svg2sprite-cli": "2.0.1",
        "typescript": "5.3.2"
    },
    "engines": {
        "node": "20"
    },
    "browserslist": [
        "last 2 Chrome version",
        "last 2 Firefox version",
        "last 2 Edge major versions",
        "last 2 Safari major versions",
        "last 2 iOS major versions",
        "Firefox ESR",
        "not IE > 0"
    ]
}
